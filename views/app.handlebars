<html lang="en" class="theme-light">
<head>
  <meta charset="utf-8"/>
  <title>MemoryBoard</title>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bulma@1.0.0/css/bulma.min.css"
/>
</head>
<body>
  {{!-- <script src="/assets/BulmaModal.js"></script> --}}
  <section class="columns has-background-dark">
    <div class="column is-3 section is-sticky has-background-white">
      <a class="has-text-centered" href="/">
        <figure class="image container is-96x96">
          <img id="logo" src="/assets/img/polaroid2.png" alt="camera logo"/>
        </figure>
      </a>
      <p class="title-2 has-text-centered pt-4">MemoryBoard</p>
      <aside class="menu">
        <p class="menu-label is-hidden-touch"></p>
        <ul class="menu-list">
          <li class="has-text-centered p-4">
            <span class="icon-text">
                  <button class="js-modal-trigger" data-target="modal-Uploader">
                    <span class="solar--camera-add-broken"></span>
                  </button>
              </span>
          </li>
          <li>
            <a href="/createPost" class="has-text-left p-4">
              <span class="icon-text">
                  <span class="icon">
                    <span class="ph--house-fill"></span>
                  </span>
                  <span>Home</span>
              </span>
            </a>
          </li>
          <li>
            <a href="/premium" class="has-text-left p-4">
              <span class="icon-text">
                  <span class="icon">
                    <span class="mdi--sparkles"></span>
                  </span>
                  <span>Premium</span>
              </span>
            </a>
          </li>
          <li>
            <a href="/logout" class="has-text-left p-4">
              <span class="icon-text">
                  <span class="icon">
                    <span class="solar--logout-3-bold"></span>
                  </span>
                  <span>Log out</span>
              </span>
            </a>
          </li>
        </ul>
      </aside>
      
    </div>

    <div class="column is-6">
      <section id="app">
      </section>
    </div>

    <div class="column is-3 section p-6">
      <article class="panel is-warning">
        <p class="panel-heading">Friends</p>
        <p class="panel-tabs has-background-white">
          <a class="is-active">Friends</a>
          <a>Add Friends</a>
        </p>
        <div class="panel-block has-background-white">
          <p class="control has-icons-left">
            <input class="input is-link" type="text" placeholder="Search" />
            <span class="icon is-left">
              <span class="mingcute--user-search-fill"></span>
            </span>
          </p>
        </div>
        <a class="panel-block is-active has-background-white">
          No Friends....
        </a>
      </article>
    </div>
 
  </section>

  <div id="eMessage" class='hidden'>
    <h3><span id="errorMessage"></span></h3>
  </div>

  <script src="/assets/appBundle.js"></script>

</body>
</html>
